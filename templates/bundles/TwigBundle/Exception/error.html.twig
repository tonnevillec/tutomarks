{% extends 'base.html.twig' %}

{% block body %}
	<div class="ex-page-content bootstrap snippets">
		<div class="container">
			<div class="row">
				<div class="col-6 col-sm-6">
					<svg class="svg-box img-fluid" viewBox="0 0 837 1045" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sketch="http://www.bohemiancoding.com/sketch/ns">
						<g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" sketch:type="MSPage">
							<path d="M353,9 L626.664028,170 L626.664028,487 L353,642 L79.3359724,487 L79.3359724,170 L353,9 Z" id="Polygon-1" stroke="#1a1a1a" stroke-width="6" sketch:type="MSShapeGroup"></path>
							<path d="M78.5,529 L147,569.186414 L147,648.311216 L78.5,687 L10,648.311216 L10,569.186414 L78.5,529 Z" id="Polygon-2" stroke="#1a1a1a" stroke-width="6" sketch:type="MSShapeGroup"></path>
							<path d="M773,186 L827,217.538705 L827,279.636651 L773,310 L719,279.636651 L719,217.538705 L773,186 Z" id="Polygon-3" stroke="#1a1a1a" stroke-width="6" sketch:type="MSShapeGroup"></path>
							<path d="M639,529 L773,607.846761 L773,763.091627 L639,839 L505,763.091627 L505,607.846761 L639,529 Z" id="Polygon-4" stroke="#1a1a1a" stroke-width="6" sketch:type="MSShapeGroup"></path>
							<path d="M281,801 L383,861.025276 L383,979.21169 L281,1037 L179,979.21169 L179,861.025276 L281,801 Z" id="Polygon-5" stroke="#1a1a1a" stroke-width="6" sketch:type="MSShapeGroup"></path>
						</g>
					</svg>
				</div>

				<div class="col-5 col-sm-5 offset-1">
					<div class="message-box mt-5">
						<h1 class="m-b-0 h1">-< {{ status_code }} >-</h1>
						<p>{{ status_text }}.</p>
						{% if is_granted('ROLE_ADMIN') %}
							<p>{{ exception.message|e|format_file_from_text }}</p>
						{% endif %}
						<p>
							{{ 'error.send_mail'|trans|capitalize }} <a href="mailto:support@tutomarks.fr">support@tutomarks.fr</a>
						</p>
						<div class="buttons-con">
							<div class="action-link-wrap">
								<a href="{{ path('home') }}" class="btn btn-outline-primary m-t-20">{{ 'back_to_home'|trans|capitalize }}</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
